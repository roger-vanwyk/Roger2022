<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".quiz.QuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/question_1_container"
            style="@style/question_container_style">

            <TextView
                style="@style/question_style"
                android:text="@string/question_1" />

            <RadioGroup
                android:id="@+id/question_1_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/question_1_first_opening_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

                <RadioButton
                    android:id="@+id/question_1_second_opening_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

                <RadioButton
                    android:id="@+id/question_1_third_opening_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <ImageView
                        android:id="@+id/question_1_first_opening"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/danish_gambit" />

                </LinearLayout>

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <ImageView
                        android:id="@+id/question_1_second_opening"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/english_opening" />

                </LinearLayout>

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <ImageView
                        android:id="@+id/question_1_third_opening"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/queens_gambit" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_2_container"
            style="@style/question_container_style">

            <TextView
                style="@style/question_style"
                android:text="@string/question_2" />

            <RadioGroup
                android:id="@+id/question_2_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/question_2_first_opening_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

                <RadioButton
                    android:id="@+id/question_2_second_opening_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

                <RadioButton
                    android:id="@+id/question_2_third_opening_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <ImageView
                        android:id="@+id/question_2_first_opening"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/caro_kann" />

                </LinearLayout>

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <ImageView
                        android:id="@+id/question_2_second_opening"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/sicilian_defence" />

                </LinearLayout>

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <ImageView
                        android:id="@+id/question_2_third_opening"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/dragon_sicilian" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_3_container"
            style="@style/question_container_style">

            <TextView
                style="@style/question_style"
                android:text="@string/question_3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout style="@style/checkbox_group_layout_style">

                    <CheckBox
                        android:id="@+id/question_3_first_checkbox"
                        style="@style/question_checkbox_style"
                        android:text="" />

                    <ImageView
                        android:id="@+id/question_3_first_checkbox_opening"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/classic_sicilian" />

                </LinearLayout>

                <LinearLayout style="@style/checkbox_group_layout_style">

                    <CheckBox
                        android:id="@+id/question_3_second_checkbox"
                        style="@style/question_checkbox_style"
                        android:text="" />

                    <ImageView
                        android:id="@+id/question_3_second_checkbox_opening"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/najdorf_sicilian" />

                </LinearLayout>

                <LinearLayout style="@style/checkbox_group_layout_style">

                    <CheckBox
                        android:id="@+id/question_3_third_checkbox"
                        style="@style/question_checkbox_style"
                        android:text="" />

                    <ImageView
                        android:id="@+id/question_3_third_checkbox_opening"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/indian_defence" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_4_container"
            style="@style/question_container_style">

            <TextView
                style="@style/question_style"
                android:text="@string/question_4" />

            <ImageView
                android:id="@+id/question_4_opening"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ruy_lopez" />

            <EditText
                android:id="@+id/question_4_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="textNoSuggestions"
                tools:ignore="Autofill,LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_5_container"
            style="@style/question_container_style">

            <TextView
                style="@style/question_style"
                android:text="@string/question_5" />

            <RadioGroup
                android:id="@+id/question_5_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/question_5_first_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

                <RadioButton
                    android:id="@+id/question_5_second_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

                <RadioButton
                    android:id="@+id/question_5_third_radio"
                    style="@style/question_radio_button_style"
                    android:text="" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <ImageView
                        android:id="@+id/question_5_first_opening_radio"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/english_opening" />

                </LinearLayout>

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <ImageView
                        android:id="@+id/question_5_second_opening_radio"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/birds_opening" />

                </LinearLayout>

                <LinearLayout style="@style/radio_group_linear_layout_style">

                    <ImageView
                        android:id="@+id/question_5_third_opening_radio"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/reti_opening" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_6_container"
            style="@style/question_container_style">

            <TextView
                style="@style/question_style"
                android:text="@string/question_6" />

            <ImageView
                android:id="@+id/question_6_opening"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/italian_game" />

            <EditText
                android:id="@+id/question_6_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="textNoSuggestions"
                tools:ignore="Autofill,LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_7_container"
            style="@style/question_container_style">

            <TextView
                style="@style/question_style"
                android:text="@string/question_7" />

            <ImageView
                android:id="@+id/question_7_opening"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/french_defence" />

            <EditText
                android:id="@+id/question_7_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="textNoSuggestions"
                tools:ignore="Autofill,LabelFor" />
        </LinearLayout>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="checkQuiz"
            android:text="@string/submit"
            tools:ignore="UsingOnClickInXml" />
    </LinearLayout>
</ScrollView>